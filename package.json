{
  "name": "opk-pm",
  "version": "0.5.0",
  "description": "The universal package manager for JS/TS.",
  "keywords": [
    "opk",
    "typescript",
    "package-json",
    "npm",
    "bun",
    "deno",
    "pnpm",
    "yarn",
    "monorepo-tooling",
    "nodejs"
  ],
  "homepage": "https://opk.a35.dev/",
  "license": "Apache-2.0",
  "repository": "https://github.com/opk-pm/Cli.git",
  "type": "module",
  "main": "dist/cli.js",
  "module": "dist/cli.js",
  "bin": {
    "opk": "./dist/cli.js",
    "opx": "./dist/opx.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run build.ts",
    "build:watch": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dev": "bun run src/cli.ts help"
  },
  "dependencies": {
    "@opk/ts-pkg": "^0.6.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "6.0.0-beta"
  },
  "private": false
}
